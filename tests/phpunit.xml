<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="bootstrap.php" colors="true">

    <testsuites>
        <testsuite name="MphpFlickrPhotoSearchTest">
            <directory>MphpFlickrPhotoSearchTest</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../src/MphpFlickrPhotoSearch</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
        <log type="coverage-html" target="./log/report" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>

</phpunit>